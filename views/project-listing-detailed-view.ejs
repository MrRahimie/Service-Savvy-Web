  <script>
    $(document).ready(function() {
      const urlParams = new URLSearchParams(window.location.search);
      const projectId = urlParams.get('id');

      const shortMessage = "What's good freelancers! By any chance you ideally meet these requirements, drop us your resume and proposal and we will contact you shortly.";

      if (projectId) {
        // Fetch project data from server
        $.getJSON(`/projects/${projectId}`, function(project) {
          console.log("Fetched project data:", project); // Debugging

          const name = project.name || 'No name provided';
          const overview = project.overview || 'No overview provided';
          const requirements = project.requirements || 'No requirements provided';
          const budget = project.budget || 'No budget provided';
          const email = project.email || 'No email provided';
          const phone = project.phone || 'No phone provided';
          const completionDate = project.completionDate ? new Date(project.completionDate).toLocaleDateString() : 'No completion date provided';

          let projectDetails = `<div class="card">
                        <div class="card-body">
                            <h3 class="card-title">${name}</h3>
                            <p class="card-text">${shortMessage}</p>
                            <p class="card-text"><strong>Overview:</strong> ${overview}</p>
                            <p class="card-text"><strong>Requirements:</strong> ${requirements}</p>
                            <p class="card-text"><strong>Budget:</strong> RM${budget}</p>
                            <p class="card-text"><strong>Completion Date:</strong> ${completionDate}</p>
                            <p class="card-text"><a style="font-weight:bold" href="mailto:${email}">${email}</a> or reach us via WhatsApp at ${phone}</p>
                        </div>
                    </div>`;
                    $('#project-details').html(projectDetails);
        }).fail(function() {
          $('#project-details').html('<p>Error fetching project details.</p>');
        });
      } else {
        $('#project-details').html('<p>Error fetching project details.</p>');
      }
    });
  </script>
